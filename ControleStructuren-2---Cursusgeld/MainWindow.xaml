        <TextBox x:Name="numberOfClassHoursTextBox" HorizontalAlignment="Left" Height="23" Margin="164,59,0,0" TextWrapping="Wrap" Text="60" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="subscriptionFeeTextBox" HorizontalAlignment="Left" Height="23" Margin="164,99,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label x:Name="numericLabel" HorizontalAlignment="Left" Height="34" Margin="302,18,0,0" VerticalAlignment="Top" Width="146"/>
        <Label x:Name="leapYearLabel"  HorizontalAlignment="Left" Height="31" Margin="302,58,0,0" VerticalAlignment="Top" Width="146"/>
    </Grid>
</Window>
