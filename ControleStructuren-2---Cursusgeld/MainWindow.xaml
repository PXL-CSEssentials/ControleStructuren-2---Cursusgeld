<Window x:Class="ControleStructuren_2___Cursusgeld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleStructuren_2___Cursusgeld"
        mc:Ignorable="d"
        Title="Cursusjaar - schrikkeljaar" Height="219" Width="462">
    <Grid>
        <Label Content="Jaar:" HorizontalAlignment="Left" Margin="96,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Aantal lesuren:" HorizontalAlignment="Left" Margin="41,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Inschrijvingsgeld:" HorizontalAlignment="Left" Margin="28,93,0,0" VerticalAlignment="Top"/>
        <Button x:Name="numericButton" Content="Test _numeriek" HorizontalAlignment="Left" Margin="24,135,0,0" VerticalAlignment="Top" Width="130" Click="numericButton_Click" Height="45" FontWeight="Bold"/>
